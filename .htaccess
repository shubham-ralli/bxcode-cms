<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Assets: If file exists in public/, serve it
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{DOCUMENT_ROOT}/laravel-cms/public%{REQUEST_URI} -f
    RewriteRule ^(.*)$ public/$1 [L]

    # Handle Front Controller (if not an asset)
    # If the file doesn't exist in root, let index.php handle it (which proxies to public)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>